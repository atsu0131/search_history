<h1>Sign up</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <%= form_with(model: @user, local: true) do |f| %>
    <div class="user">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="user">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div class="user">
      <%= f.label :age %>
      <%= f.text_field :age, in: 18...100 %>
    </div>

    <div class="user">
      <%= f.label :sex %>
      <%= f.radio_button :publish,'男',  class: :rd %>男
      <%= f.radio_button :publish,'女',  class: :rd %>女
    </div>

    <div class="user">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="user">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="user">
      <%= f.submit "Create my account" %>
    </div>

  <% end %>

