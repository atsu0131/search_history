<!DOCTYPE html>
<html>
  <head>
    <title>SearchHistory</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  </head>

  <body>


<nav class="navbar navbar-inverse">
  <div  class="container">
  <ul class="nav  navbar-nav  ">
  <li  class="active">
    <a class="navbar-brand" href="/toppages/index">
      レキタン！
    </a>
  </li>
  <li  class="dropdown">
  <a href="#"  class="dropdown-toggle" data-toggle="dropdown"  role="button" aria-expanded="false">SERVICE<span  class="caret"></span></a>
  <% if logged_in? %>
  <ul  class="dropdown-menu" role="menu">
  <li><%= link_to "maps", maps_index_path %></li>
  <li><%= link_to "ranking", rankings_favorite_path %></li>
  <li><%= link_to "Profile", user_path(current_user.id) %></li>
  <li  class="divider"></li>
  <li><%= link_to "purchase", articles_path %></li>
  <li  class="divider"></li>
  <li><%= link_to "quiz", quizzes_path %></li>
  </ul>
  </li>
  <li><%= link_to "Logout", session_path(current_user.id), method: :delete ,data: { confirm: '本当にログアウトしていいですか？' }%></li>
  <% else %>
  <li><%= link_to "Sign up", new_user_path %></li>
  <li><%= link_to "Login", new_session_path %></li>
  <% end %>
  </ul>

<script type="text/javascript">
function gate(){
   // ▼ユーザの入力を求める
   var UserInput = prompt("パスワードを入力して下さい:","");

   if( "castle" == UserInput ) {
      // ▼入力内容からファイル名を生成して移動
      window.location.href = '/castles/new';
   }
}
</script>

		</div>
	</div>
</nav>


  <%= yield %>
    <footer>
      <div class="footer">
        <ul>
          <li><a href="#" onclick="gate();">admin</a></li>
        </ul>
      </div>
    </footer>

  </body>

</html>
